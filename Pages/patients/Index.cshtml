@page
@model HospitalWebApp.Pages.patients.IndexModel
@{
}
<br/>
<h2>List of patients</h2>
<a class='btn btn-primary btn-sm' href='/patients/Create'>New patient</a>
<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listPatients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.createAt</td>
                <td>
                    <a class='btn btn-primary btn-sm' href="/patients/Edit?id=@item.id">Edit</a>
                    <a class='btn btn-danger btn-sm' href="/patients/Delete?id=@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>